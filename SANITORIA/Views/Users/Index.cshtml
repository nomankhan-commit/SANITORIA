
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/myLayout.cshtml";
}



<div class="container">
    <a class="btn btn-dark" href="@Url.Action("New", "Users")">Add</a>
    <div id="usergrid"></div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script src="~/Scripts/MyScripts/devExhelper.js"></script>
<script src="~/Scripts/MyScripts/fin_common.js"></script>
<script src="~/Scripts/Lib/User.js"></script>
<script src="~/Scripts/MyScripts/AjaxHelper.js"></script>
<script src="~/Content/ThemeContent/jszip.js"></script>
<script>


    $(document).ready(function () {
        user.loadGrid();
        $('body').on('click', '.elm_edit', function () {

            let id = $(this).attr('id');
            window.location.href = fin_common.sitrurl+ "/Users/Edit/" + id;

        })

        $('body').on('click', '.elm_delete', function () {

            let id = $(this).attr('id');
            user.delete(id);

        })


        

    })


</script>


