<script src="~/Scripts/MyScripts/AjaxHelper.js"></script>
<script>


    $(document).ready(function () {

        po.company = @Html.Raw(Json.Encode(ViewBag.company));
        po.vendor = @Html.Raw(Json.Encode(ViewBag.vendor));
        po.warehouse = @Html.Raw(Json.Encode(ViewBag.warehouse));


        po.loadGrid();
        $('body').on('click', '.elm_edit', function () {

            let id = $(this).attr('id');
            window.location.href = fin_common.sitrurl + "/PurchaseOrder/edit/" + id;

        })

        $('body').on('click', '.elm_delete', function () {

            let id = $(this).attr('id');
            po.delete(id);

        })




    })


</script>



