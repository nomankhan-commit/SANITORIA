@{ 

    Layout = null;

}

<!doctype html>
<html lang="en">
<head>
    <title>Login 10</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


    <link href="~/Content/Loginpage/css/style.css" rel="stylesheet" />


    <!-- Toastr -->
    <link rel="stylesheet" href="~/Content/ThemeContent/plugins/toastr/toastr.min.css">

</head>
<body class="img js-fullheight" style="background-image: url(../Content/Loginpage/images/bg.jpg); ">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">SANITORIA FINANCE</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Account Login</h3>
                        <form action="#" class="signin-form">
                            <div class="form-group">
                                <input type="text" class="form-control" id="username-field" placeholder="Username" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" type="password" class="form-control" placeholder="Password" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Remember Me
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#" style="color: #fff">Forgot Password</a>
                                </div>
                            </div>
                        </form>
                        @*<p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>*@
                        <div class="social d-flex text-center">
                            @*<a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                                <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Content/Loginpage/js/jquery.min.js"></script>
    <script src="~/Content/Loginpage/js/popper.js"></script>
    <script src="~/Content/Loginpage/js/bootstrap.min.js"></script>
    <script src="~/Content/Loginpage/js/main.js"></script>


    <script src="~/Scripts/MyScripts/AjaxHelper.js"></script>
    <script src="~/Scripts/MyScripts/fin_common.js"></script>

    <!-- Toastr -->
    <script src="~/Content/ThemeContent/plugins/toastr/toastr.min.js"></script>

    <script>

        $(document).ready(function () {

            $('.submit').click(function (e) {
                e.preventDefault();
                debugger;

                var data = {};
                data.username = $('#username-field').val();
                data.password = $('#password-field').val();

                //var actionurl = e.currentTarget.action;
                var url = "/Login/loginAttempt";
                var dataType = "json";
                var postType = "POST";
                var data = JSON.stringify(data);
                var xxhr = ajaxHealper.ajaxProcessor_login(url, dataType, postType, data, true, function (success, extrapram) {
                    debugger;

                    if (success.status == 1 && success.message == "Login Successfull") {
                        //window.location.href = "/products/Index";
                        window.location.href = "/Dashboard/Index";
                    }
                    else {
                        fin_common.showToast(2, "Your Password or Email is not correct.")
                    }

                },
                    function (error) {

                        fin_common.showToast(2, "some thing went wrog.")

                    });

            })

        })

    </script>

</body>
</html>

